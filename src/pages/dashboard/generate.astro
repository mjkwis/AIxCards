---
/**
 * Generate Flashcards Page
 *
 * Page for generating flashcards from text using AI
 */

import DashboardLayout from "@/layouts/DashboardLayout.astro";
import { GeneratePage } from "@/components/pages/GeneratePage";
---

<DashboardLayout title="Generuj fiszki - 10xCards" description="Wygeneruj fiszki z tekstu używając AI">
  <div class="space-y-6">
    <div>
      <h1 class="text-3xl font-bold mb-2">Generuj fiszki</h1>
      <p class="text-muted-foreground">Wklej tekst, a AI automatycznie utworzy z niego pytania i odpowiedzi</p>
    </div>

    <GeneratePage client:only="react" />
  </div>
</DashboardLayout>
