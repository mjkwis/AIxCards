---
/**
 * Study Session Page
 *
 * Page for conducting study sessions with spaced repetition
 */

import DashboardLayout from "@/layouts/DashboardLayout.astro";
import { StudyPage } from "@/components/pages/StudyPage";
---

<DashboardLayout title="Sesja nauki - 10xCards" description="Przeprowadź sesję nauki z algorytmem SM-2">
  <StudyPage client:only="react" />

  {/* CSS for 3D flip animation */}
  <style is:global>
    .perspective-1000 {
      perspective: 1000px;
    }
    .preserve-3d {
      transform-style: preserve-3d;
    }
    .backface-hidden {
      backface-visibility: hidden;
    }
    .rotate-y-180 {
      transform: rotateY(180deg);
    }
  </style>
</DashboardLayout>
