---
/**
 * Login Page
 *
 * User authentication page
 */

import PublicLayout from "@/layouts/PublicLayout.astro";
import { LoginFormWrapper } from "@/components/auth/LoginFormWrapper";

// If user is already logged in, redirect to dashboard
const {
  data: { session },
} = await Astro.locals.supabase.auth.getSession();
if (session?.user) {
  return Astro.redirect("/dashboard/generate");
}
---

<PublicLayout title="Zaloguj się - 10xCards" description="Zaloguj się do swojego konta 10xCards">
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-md mx-auto">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold mb-2">Witaj ponownie!</h1>
        <p class="text-muted-foreground">Zaloguj się, aby kontynuować naukę</p>
      </div>

      <LoginFormWrapper client:visible />
    </div>
  </div>
</PublicLayout>
